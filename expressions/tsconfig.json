{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "dist"
    ]
  }
}